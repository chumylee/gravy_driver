<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wareproz.mac.gravydriver.EnrouteRiderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/relativeLayout4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gravy Driver"
            android:id="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorGrey" />
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout7"
        android:layout_above="@+id/relativeLayout30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/relativeLayout30"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:id="@+id/relativeLayout8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/user_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profilepic"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView20"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/telephone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1 mins"
                android:id="@+id/eta"
                android:layout_alignTop="@+id/textView10"
                android:layout_alignRight="@+id/imageView20"
                android:layout_alignEnd="@+id/imageView20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pick up"
                android:id="@+id/textView10"
                android:layout_alignTop="@+id/user_pic"
                android:layout_toRightOf="@+id/user_pic"
                android:layout_toEndOf="@+id/user_pic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textColor="#7DC24F"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Chumylee"
                android:id="@+id/user_name"
                android:layout_alignTop="@+id/eta"
                android:layout_toRightOf="@+id/user_pic"
                android:layout_toEndOf="@+id/user_pic"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/user_pic" />

        </RelativeLayout>

        <Button
            style="?android:textAppearanceSmall"
            android:id="@+id/confirmArrival"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CONFIRM ARRIVAL"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:background="#005A98"
            android:layout_below="@+id/relativeLayout8"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cancel Trip"
            android:id="@+id/textView"
            android:layout_below="@+id/confirmArrival"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/holo_red_dark" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/relativeLayout7"
        android:background="#FFFFFF"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/relativeLayout6"
            android:layout_toStartOf="@+id/relativeLayout6"
            android:background="@drawable/rectangle_background"
            android:id="@+id/relativeLayout5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="pick up address"
            android:id="@+id/pickup_address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/relativeLayout5"
            android:layout_toStartOf="@+id/relativeLayout5"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:typeface="serif" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout6" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView5"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/navigation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NAVIGATE"
                android:id="@+id/textView15"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:textSize="12dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/navigate"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#00000000" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
