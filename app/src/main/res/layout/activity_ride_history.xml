    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstlayout"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/location"
            android:baselineAlignBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="11 MAJEKODUNMI STREET, ALLEN AVENUE, IKEJA, LAGOS STATE"
            android:id="@+id/textView12"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="11 MAJEKODUNMI STREET, ALLEN AVENUE, IKEJA, LAGOS STATE"
            android:id="@+id/textView13"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginRight="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="20dp"
            android:background="#F2F2F2"
            android:id="@+id/view" />


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/view"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/driverIcon"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp"
                        android:background="#00CC00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginLeft="5dp"
                        android:text="Drivers Name"
                        android:id="@+id/driverName"
                        android:layout_alignTop="@+id/driverIcon"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@+id/driverIcon"
                        android:layout_toEndOf="@+id/driverIcon" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/vehicleIcon1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp"
                        android:background="#00CC00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginLeft="5dp"
                        android:text="Vehicle Name"
                        android:id="@+id/vehicleName1"
                        android:layout_alignTop="@+id/vehicleIcon1"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@+id/vehicleIcon1"
                        android:layout_toEndOf="@+id/vehicleIcon1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/dateIcon1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp"
                        android:background="#00CC00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginLeft="5dp"
                        android:text="Ride Date"
                        android:id="@+id/dateName1"
                        android:layout_alignTop="@+id/dateIcon1"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@+id/dateIcon1"
                        android:layout_toEndOf="@+id/dateIcon1" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/driverIcon1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp"
                        android:background="#00CC00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginLeft="5dp"
                        android:text="Ride Amount"
                        android:id="@+id/driverName1"
                        android:layout_alignTop="@+id/driverIcon1"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@+id/driverIcon1"
                        android:layout_toEndOf="@+id/driverIcon1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/vehicleIcon"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp"
                        android:background="#00CC00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginLeft="5dp"
                        android:text="Payment Method"
                        android:id="@+id/vehicleName"
                        android:layout_alignTop="@+id/vehicleIcon"
                        android:layout_marginBottom="7dp"
                        android:layout_toRightOf="@+id/vehicleIcon"
                        android:layout_toEndOf="@+id/vehicleIcon" />

                </RelativeLayout>

                <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/dateIcon"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:background="#00CC00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="5dp"
                android:text="Ride Status"
                android:id="@+id/dateName"
                android:layout_alignTop="@+id/dateIcon"
                android:layout_marginBottom="7dp"
                android:layout_toRightOf="@+id/dateIcon"
                android:layout_toEndOf="@+id/dateIcon" />

        </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
