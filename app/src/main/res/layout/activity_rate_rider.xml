<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wareproz.mac.gravydriver.RateRiderActivity"
    android:background="#7DC24F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/relativeLayout25"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gravy Driver"
            android:id="@+id/textView35"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorGrey" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/relativeLayout27"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorGrey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:id="@+id/relativeLayout26"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/rider_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profilepic"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rate"
                android:id="@+id/textView37"
                android:layout_alignTop="@+id/rider_pic"
                android:layout_toRightOf="@+id/rider_pic"
                android:layout_toEndOf="@+id/rider_pic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textColor="#7DC24F"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Chumylee"
                android:id="@+id/rider_name"
                android:layout_below="@+id/textView37"
                android:layout_alignLeft="@+id/textView37"
                android:layout_alignStart="@+id/textView37" />

        </RelativeLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:layout_below="@+id/relativeLayout26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="N2,000"
        android:id="@+id/amount"
        android:layout_marginTop="104dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:textSize="55dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/relativeLayout25"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ride Amount"
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:textSize="19dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CASH"
        android:id="@+id/payment"
        android:layout_below="@+id/amount"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#BE2212"
        android:textSize="30dp" />

</RelativeLayout>
